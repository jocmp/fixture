{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "scripthost"
    ]
  },
  "include": ["src/"],
  "exclude": [
    "node_modules",
    "__test__",
    "dist",
    "jest.ts",
    "schemas"
  ]
}
